<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:orientation="vertical"
    android:background="@drawable/widget_bg"
    android:paddingTop="30dip"
    android:paddingBottom="30dip"
    android:paddingLeft="10dip"
    android:paddingRight="10dip"
    android:id="@+id/weather_rootLayout">

    <LinearLayout 
        android:id="@+id/widget_linearlayout"
        android:layout_width="fill_parent"
        android:layout_height="108dip"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/widget_icon"
            android:layout_width="108dip"
            android:layout_height="108dip"
            android:layout_marginLeft="20dp"
            android:src="@drawable/weathericon_condition_01" />
        
		<AnalogClock
			android:id="@+id/analogClock"
			android:layout_marginLeft="40dp"
			android:layout_width="wrap_content"
 			android:layout_height="wrap_content" />

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
		
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/widget_location"
            android:layout_marginTop="14dp"
			android:layout_marginLeft="20dp"
            />
        <TextView
            android:text="@string/wuxi"
            android:id="@+id/widget_city"
		    android:textColor="@color/white"
		    android:textSize="16sp"
		    android:layout_marginTop="10dp"
			android:layout_marginLeft="2dp"
		    android:gravity="center_horizontal"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content" />
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/widget_weather"
            android:layout_marginTop="12dp"
			android:layout_marginLeft="10dp"
            />
        <TextView
            android:text="@string/qing"
            android:id="@+id/widget_weather"
		    android:textColor="@color/white"
		    android:textSize="16sp"
		    android:layout_marginTop="10dp"
			android:layout_marginLeft="2dp"
		    android:gravity="center_horizontal"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content" />
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/widget_temp"
            android:layout_marginTop="14dp"
			android:layout_marginLeft="10dp"
            />
        <TextView
            android:text="@string/wendu"
            android:id="@+id/widget_temp"
		    android:textColor="@color/white"
		    android:textSize="16sp"
		    android:layout_marginTop="10dp"
			android:layout_marginLeft="2dp"
		    android:gravity="center_horizontal"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>